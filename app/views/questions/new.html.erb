<div id="question_form">
  <%= form_for(@question) do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :content %>
    <%= f.text_field :content %>

    <%= f.label :category_name %>
    <%= f.text_field :category_name %>

    <%= f.hidden_field :category_id %>

    <%= f.hidden_field :user_id %>

    <%= f.submit "Create" %>
  <% end %>
</div>