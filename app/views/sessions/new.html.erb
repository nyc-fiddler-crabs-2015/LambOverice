<div id="login">

  <h1>Login</h1>

  <%= form_for(:session, url: sessions_path) do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Sign In" %>
  <% end %>

  <% if session[:message] %>
    <%= session[:message] %>
    <% session.delete(:message) %>
  <% end %>
</div>