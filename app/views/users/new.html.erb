<%= form_for(@user) do |f| %>
  <%= f.text_field :username, placeholder: "username" %>
  <%= f.text_field :email, placeholder: "email" %>
  <%= f.text_field :password, placeholder: "password" %>

  <%= f.submit "Create Account" %>
<% end %>

<% if session[:message] %>
  <%= session[:message] %>
  <% session.delete(:message) %>
<% end %>