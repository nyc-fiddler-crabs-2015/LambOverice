<%= form_for(:session, url: sessions_path) do |f| %>
  <%= f.text_field :username, placeholder: "username" %>
  <%= f.password_field :password, placeholder: "password" %>

  <%= f.submit "Sign In" %>
<% end %>

<% if session[:message] %>
  <%= session[:message] %>
  <% session.delete(:message) %>
<% end %>
