<li class='list-group-item answer-detail'>
  <div class='row'>
    <div class='col-md-1'>
      <%= render partial: 'votes/new', locals: {vote_count: answer.vote_count, voteable_type: 'Answer', voteable_id: answer.id} %>
    </div>
    <div class='col-md-11'>
      <p><%= answer.content %></p>
      <strong><%= link_to answer.user.username, answer.user %></strong>
      <ul class='list-group'>
        <%= render answer.comments %>
      </ul>
      <%= render partial: 'comments/new', locals: {commentable: answer, comment: Comment.new}%>
    </div>
  </div>
</li>
