<div class="row">
  <div class="col-md-4">
    <h1><%= @user.username.capitalize %></h1>
  </div>
  <div class="col-md-2">
    <%= @user.karma %>
  </div>
  <div class="col-md-2">

  </div>
  <div class="col-md-2">

  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h3>Questions</h3>
    <ul class="list-group">
      <% @user.questions.each do |question| %>
        <li class="list-group-item">
          <%= link_to question.title, question %>
          <% if curr_user && @user.id == curr_user.id %>
            <ul class="list-group">
              <% question.answers.each do |answer| %>
                <li class="list-group-item">
                  <p><%= answer.content %></p>
                  <%= link_to answer.user.username, answer.user %>
                </li>
              <% end %>
            </ul>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="col-md-6">
    <h3>Answers</h3>
    <ul class="list-group">
      <% @user.answers.each do |answer| %>
        <li class="list-group-item">
          <%= link_to answer.question.title, answer %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
